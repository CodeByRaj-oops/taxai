# Tax Consultation System - Environment Variables
# Copy this file to .env and modify values as needed

# Application Settings
NODE_ENV=development
APP_NAME=TaxSage India
APP_VERSION=1.0.0
BASE_URL=http://localhost:3000

# Tax System Configuration
TAX_YEAR=2025
ENABLE_BETA_FEATURES=true
DEFAULT_CURRENCY=INR

# Tax Deduction Limits (in INR)
MAX_80C_LIMIT=150000
MAX_80D_SELF_LIMIT=25000
MAX_80D_PARENTS_LIMIT=50000
MAX_NPS_ADDITIONAL=50000
MAX_HOME_LOAN_INTEREST=200000
STANDARD_DEDUCTION=50000

# HRA Calculation Settings
HRA_METRO_PERCENTAGE=0.5
HRA_NON_METRO_PERCENTAGE=0.4

# Rebate Settings
MAX_REBATE_AMOUNT=25000
REBATE_INCOME_LIMIT=700000

# Feature Toggles
ENABLE_TAX_OPTIMIZER=true
ENABLE_EXPORT_PDF=false
ENABLE_COMPARISON_CHARTS=true
ENABLE_RECOMMENDATIONS=true

# Optional Integrations
ENABLE_OPENAI_INTEGRATION=false
OPENAI_API_KEY=your_openai_api_key_here 